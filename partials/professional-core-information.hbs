<div class="pt-20" style="background-image: url('https://www.akronchildrens.org/siteflow_childrens/images/hanging-colored-art-bg.jpg');">
    <div class="mx-5 bg-white rounded-2xl">
        <div class="px-10 py-9 grid grid-cols-3 gap-x-5">
            <div class="space-y-5 ">
                <img class="" src="{{dynamicImage photoGallery.[0].image.url "200x200" true}}" width="300" height="300">
                {{#if acceptingNewPatients}}
                    <div class="border rounded-3xl bg-ach-light-green w-56 text-center text-white">&#10003; Accepting New Patients</div>
                {{/if}}
            </div>
            <div>
                <h1>{{name}}</h1>
                <div>{{c_providerTitle}}</div>
                <div class="mt-5 text-lg text-gray-400">MEDICAL SERVICE / DEPARTMENT / PROGRAM:</div>
                    {{#each c_relatedDepartments}}
                        <div><a class="ach-link" href="/{{slug}}">&#8594; {{name}}</a></div>
                    {{/each}}
            </div>
            <div class="phone-number mt-2 space-y-5">
                <div class="btn rounded-lg border border-gray-300 bg-ach-gray hover:bg-ach-blue hover:text-white">
                    &#128241; {{phoneNumber "US" mainPhone "NATIONAL"}}
                </div>
                <div>
                    <div class="font-bold">Patient Rating</div>
                    <div style="">&#9733;&#9733;&#9733;&#9733;&#9733;</div>
                    <div><span class="font-bold">4.8</span> out of 5</div>
                    <div>41 ratings</div>
                    <div>4 Comments</div>
                    <div class="ach-link">View details and comments</div>
                </div>
            </div>
        </div>
    </div>
</div>