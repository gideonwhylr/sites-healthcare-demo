<div class="grid gap-y-5">
    <div class="text-center">
        <h2>Meet Our Doctors / Providers:</h2>
    </div>

    <div class="grid gap-y-3">
        <div class="bg-ach-blue text-white text-center py-4">Physicians/Providers:</div>
        <div class="grid gap-y-3 gap-x-3 md:grid-cols-3">
            {{#each c_relatedProfessionals}}
                {{#if (compare this.c_providerListCategory "PHYSICIANS/PROVIDERS")}}
                    <div class="professional">
                        <img class="" src="{{dynamicImage this.headshot.url "200x200" true}}" width="150" height="150">
                        <div class="">
                            <a href="" class="ach-link"><h4>{{this.name}}</h4></a>
                            {{#if this.c_providerTitle}}
                                <div class="italic text-sm">{{this.c_providerTitle}}</div>
                            {{/if}}
                            {{#if this.acceptingNewPatients}}
                                <div class="italic text-sm space-x-3">
                                    <span>&#10004;</span><span>Accepting New Patients</span>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="grid gap-y-3">
        <div class="bg-yellow-500 text-white text-center py-4">Nurse Practitioners/Physician Assistants:</div>
        <div class="grid gap-y-3 gap-x-3 md:grid-cols-3">
            {{#each c_relatedProfessionals}}
                {{#if (compare this.c_providerListCategory "NURSE_PRACTITIONERS/PHYSICIAN_ASSISTANTS")}}
                    <div class="professional">
                        <img class="" src="{{dynamicImage this.headshot.url "200x200" true}}" width="150" height="150">
                        <div class="">
                            <a href="" class="ach-link"><h4>{{this.name}}</h4></a>
                            {{#if this.c_providerTitle}}
                                <div class="italic text-sm">{{this.c_providerTitle}}</div>
                            {{/if}}
                            {{#if this.acceptingNewPatients}}
                                <div class="italic text-sm space-x-3">
                                    <span>&#10004;</span><span>Accepting New Patients</span>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="grid gap-y-3">
        <div class="bg-ach-green text-white text-center py-4">Other Providers:</div>
        <div class="grid gap-y-3 gap-x-3 md:grid-cols-3">
            {{#each c_relatedProfessionals}}
                {{#if (compare this.c_providerListCategory "OTHER_PROVIDERS")}}
                    <div class="professional">
                        <img class="" src="{{dynamicImage this.headshot.url "200x200" true}}" width="150" height="150">
                        <div class="">
                            <a href="" class="ach-link"><h4>{{this.name}}</h4></a>
                            {{#if this.c_providerTitle}}
                                <div class="italic text-sm">{{this.c_providerTitle}}</div>
                            {{/if}}
                            {{#if this.acceptingNewPatients}}
                                <div class="italic text-sm space-x-3">
                                    <span>&#10004;</span><span>Accepting New Patients</span>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
    
</div>